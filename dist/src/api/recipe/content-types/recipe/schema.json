{
    "kind": "collectionType",
    "collectionName": "recipes",
    "info": {
        "singularName": "recipe",
        "pluralName": "recipes",
        "displayName": "Recipe",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "description": {
            "type": "richtext"
        },
        "ingredientsSection": {
            "type": "component",
            "repeatable": true,
            "component": "recipe-data.ingredient-section"
        },
        "coverImage": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "extra": {
            "type": "richtext"
        },
        "servings": {
            "type": "integer"
        },
        "socialLinks": {
            "type": "component",
            "repeatable": true,
            "component": "socials.social"
        },
        "tags": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::tag.tag"
        },
        "servingUnit": {
            "type": "string"
        },
        "directionsSection": {
            "type": "component",
            "repeatable": true,
            "component": "recipe-data.directions-section"
        },
        "category": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::category.category"
        }
    }
}
