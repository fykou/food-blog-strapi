{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipe",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "richtext"
    },
    "ingredientSection": {
      "type": "component",
      "repeatable": true,
      "component": "recipe-data.ingredient-section"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "directions": {
      "type": "component",
      "repeatable": true,
      "component": "recipe-data.directions"
    },
    "extra": {
      "type": "richtext"
    },
    "servings": {
      "type": "integer"
    },
    "link": {
      "type": "component",
      "repeatable": true,
      "component": "socials.social"
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "tags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag"
    }
  }
}
