{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipes",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "yields": {
      "type": "string"
    },
    "ingredients": {
      "type": "json"
    },
    "directions": {
      "type": "json"
    },
    "tips": {
      "type": "json"
    },
    "other": {
      "type": "richtext"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "imperial": {
      "type": "boolean",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "Directions": {
      "type": "component",
      "repeatable": true,
      "component": "recipe-data.directions"
    },
    "Extra": {
      "type": "richtext"
    },
    "Servings": {
      "type": "integer"
    },
    "tags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag",
      "mappedBy": "recipe"
    },
    "ingredientSection": {
      "type": "component",
      "repeatable": true,
      "component": "recipe-data.ingredient-section"
    },
    "Link": {
      "type": "component",
      "repeatable": true,
      "component": "socials.social"
    }
  }
}
